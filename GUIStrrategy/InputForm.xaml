<Window x:Class="GUIStrategy.InputForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:GUIStrategy"
             mc:Ignorable="d"
        Title="Выбор хода" Height="700" Width="800" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="27*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <DockPanel LastChildFill="true" Grid.Row="0">
                <TextBlock Text="Все ваши слова:" Margin="10,5,10,5" TextWrapping="Wrap" DockPanel.Dock="Top" />
                <ListBox x:Name="playerWordsListBox" Margin="5,5,5,5" Grid.Row="1"/>
            </DockPanel>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="moveNumberTextBlock" Margin="10,5,10,5" TextWrapping="Wrap"/>
                <TextBlock x:Name="playerNumberTextBlock" Margin="10,5,10,5" TextWrapping="Wrap" Grid.Row="1"/>
                <TextBlock x:Name="productionNumberTextBlock" Margin="10,5,10,5" TextWrapping="Wrap" Grid.Row="2"/>
                <DockPanel LastChildFill="true" Grid.Row="3">
                    <TextBlock DockPanel.Dock="Top" Margin="10,5,10,5" TextWrapping="Wrap" Text="Слова игроков:"/>
                    <ListBox x:Name="wordsListBox" Margin="5,5,5,5"/>
                </DockPanel>
            </Grid>

            <Grid Grid.ColumnSpan="2" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="206*"/>
                    <ColumnDefinition Width="129*"/>
                    <ColumnDefinition Width="130"/>
                </Grid.ColumnDefinitions>
                <DockPanel LastChildFill="true" Margin="0,0,0,0" Grid.RowSpan="2">
                    <TextBlock DockPanel.Dock="Top" TextWrapping="Wrap" Text="Группы продукций и количество этих продукций в банке:" Margin="10,5,10,5"/>
                    <ListBox x:Name="productionsListBox" Margin="5,5,5,5"/>
                </DockPanel>
                <DockPanel LastChildFill="true" Grid.Column="1">
                    <TextBlock Text="Текущий ход:" Margin="10,5,10,5" TextWrapping="Wrap" DockPanel.Dock="Top" />
                    <ListBox x:Name="moveListBox" Margin="5,5,5,5" Grid.Row="1"/>
                </DockPanel>
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="13*"/>
                    </Grid.RowDefinitions>
                    <Button x:Name="helpButton" Content="Помощь" Margin="10,5,10,5"/>
                    <Button x:Name="showConfigButton" Content="Показать конфигурацию" Margin="10,5,10,5"/>
                    <Button x:Name="deleteLastMoveButton" Content="Удалить последний ход" Margin="10,5,10,5" Grid.Row="1" Click="deleteLastMoveButton_Click"/>
                    <Button x:Name="deleteAllMovesButton" Content="Удалить все ходы" Margin="10,5,10,5" Grid.Row="2" Click="deleteAllMovesButton_Click"/>
                    <Button x:Name="addMoveButton" Content="Добавить ход" Margin="10,5,10,5" Grid.Row="3" Click="addMoveButton_Click"/>
                    <Button x:Name="finishButton" Content="Закончить" Margin="10,5,10,5" Grid.Row="4" Click="finishButton_Click"/>

                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Margin="10,5,10,5" TextWrapping="Wrap" Text="Подходящие слова:" Grid.Column="1"/>
            <ListBox x:Name="avaliablePlayerWordsListBox" Grid.Column="1" Margin="5,5,5,5" Grid.Row="1"/>
            <TextBlock x:Name="selectedProductionGroupTextBlock" Margin="10,5,10,5" TextWrapping="Wrap" Text="TextBlock"/>
            <ListBox x:Name="selectedProductionGroupListBox" Grid.Column="0" Margin="5,5,5,5" Grid.Row="1"/>



        </Grid>
    </Grid>
</Window>
